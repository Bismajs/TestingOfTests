@page
@model Projektarbete_Bokningssystem.Pages.Bookings.MyBookingsModel
@{
}

{
    ViewData["Title"] = "Mina bokningar";
}

<h1>Mina bokningar</h1>

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert alert-success">
        @Model.StatusMessage
    </div>
}

@if (!Model.Bookings.Any())
{
    <div class="alert alert-info">
        Du har inga aktiva bokningar. <a asp-page="Create">Skapa en ny bokning</a>.
    </div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Rum</th>
                <th>Datum</th>
                <th>Beskrivning</th>
                <th>Åtgärder</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model.Bookings)
            {
                <tr>
                    <td>@booking.StudyRoom.Name</td>
                    <td>@booking.BookingDate.ToShortDateString()</td>
                    <td>
                        <form method="post">
                            <input type="hidden" name="id" value="@booking.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Avboka</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="mt-3">
    <a asp-page="Create" class="btn btn-primary">Boka nytt rum</a>
    <a asp-page="/Index" class="btn btn-secondary">Tillbaka till startsidan</a>
</div>